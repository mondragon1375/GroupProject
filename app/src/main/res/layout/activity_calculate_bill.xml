<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Restaurant_Layout"
    tools:context=".CalculateBillActivity">


    <TextView
        style="@style/textTitle"
        android:id="@+id/billMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bill Page" />

    <ListView
        android:id="@+id/runListView"
        android:layout_width="wrap_content"
        android:layout_height="268dp" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total cost of items" />

    <Button
        android:id="@+id/buttonNewRun"
        style="@style/buttonProceed"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickAddNewRun"
        android:text="Enter New Food Item" />


</LinearLayout>