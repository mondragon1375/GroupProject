<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Restaurant_Layout"
    tools:context=".DessertsMenuActivity">

    <TextView
        style="@style/textTitle"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:text="Dessert Menu" />

    <ListView
        android:id="@+id/list_dessertChoices"
        android:layout_width="match_parent"
        android:layout_height="378dp" />

    <EditText
        android:id="@+id/dessertItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the name of the item"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/button4"
        style="@style/buttonProceed"
        android:onClick="goToBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Bill" />

</LinearLayout>