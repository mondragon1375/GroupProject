<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Restaurant_Layout"
    android:orientation="vertical">

    <Button
        android:id="@+id/button7"
        style="@style/buttonProceed"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:onClick="goToKidsMenu"
        android:text="add to bill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <TextView
        android:id="@+id/textView4"
        style="@style/textTitle"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:text="Drinks Menu"
        app:layout_constraintBottom_toTopOf="@+id/list_drinkChoices"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/list_drinkChoices"
        style="@style/viewList"
        android:layout_height="250dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/drink"
        style="@style/textEdit"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:text="Click on a drink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_drinkChoices" />

    <TextView
        android:id="@+id/cost"
        style="@style/textEdit"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:text="Cost of  drink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drink" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonProceed"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="61dp"
        android:onClick="goToKidsMenu"
        android:text="Proceed to\nKids Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>