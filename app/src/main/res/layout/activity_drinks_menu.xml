<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Restaurant_Layout"
    android:orientation="vertical"
    tools:context=".DrinksMenuActivity">

    <TextView
        android:id="@+id/textView4"
        style="@style/textTitle"
        android:text="Drinks Menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_drinkChoices"
        style="@style/viewList"
        android:layout_width="363dp"
        android:layout_height="245dp"
        app:layout_constraintBottom_toTopOf="@+id/drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/drink"
        style="@style/textEdit"
        android:layout_marginBottom="32dp"
        android:text="Click on a drink"
        app:layout_constraintBottom_toTopOf="@+id/cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cost"
        style="@style/textEdit"
        android:layout_marginBottom="96dp"
        android:text="Cost of drink"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addtoBill"
        style="@style/buttonProceed"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:onClick="onClickAddButton"
        android:text="add to bill"
        app:layout_constraintBottom_toBottomOf="@+id/viewBill"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/viewBill"
        style="@style/buttonProceed"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:onClick="onClickViewButton"
        android:text="View Bill"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonProceed"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:onClick="goToKidsMenu"
        android:text="Proceed to\nKids Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>