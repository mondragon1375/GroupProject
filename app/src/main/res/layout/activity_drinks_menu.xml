<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Restaurant_Layout"
    android:orientation="vertical">

    <Button
        android:id="@+id/button7"
        style="@style/buttonProceed"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:onClick="goToKidsMenu"
        android:text="add to bill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <TextView
        android:id="@+id/textView4"
        style="@style/textTitle"
        android:text="Drinks Menu" />

    <ListView
        android:id="@+id/list_drinkChoices"
        style="@style/viewList"
        android:layout_height="250dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="68dp" />

    <TextView
        android:id="@+id/drink"
        style="@style/textEdit"
        android:text="Click on a drink"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="339dp" />

    <TextView
        android:id="@+id/cost"
        style="@style/textEdit"
        android:text="Cost of  drink"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="406dp" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonProceed"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:onClick="goToKidsMenu"
        android:text="Proceed to\nKids Menu"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="575dp" />

</androidx.constraintlayout.widget.ConstraintLayout>