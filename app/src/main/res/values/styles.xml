
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuChoosing" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/yellowdark</item>
        <item name="android:layout_margin">@dimen/defaultMargin</item>
    </style>

    <style name="textMessage">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fontsize1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fontsize3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonProceed">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fontsize1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/customButtonH</item>
        <item name="android:background">@drawable/circle</item>
    </style>

</resources>
