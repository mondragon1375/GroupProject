
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Restaurant_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/fontsize1</item>
    </style>

    <style name="Restaurant_Layout" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="textMessage">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize2</item>
    </style>

    <style name="textTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fontsize3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textEdit">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/fontsize2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/edit_text_string</item>
    </style>

    <style name="viewList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listViewHeight</item>
    </style>

    <style name="buttonProceed">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/customButtonH</item>
        <item name="android:background">@drawable/circle</item>
    </style>

</resources>
